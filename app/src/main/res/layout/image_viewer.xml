<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvLoading"
        android:layout_margin="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="LOADING..."
        android:textColor="@color/main_red"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivImageViewer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:nextFocusLeft="@id/ivImageViewer"
        android:nextFocusRight="@id/ivImageViewer"
        android:nextFocusUp="@id/ivImageViewer"
        android:nextFocusDown="@id/ivImageViewer"
        android:padding="10dp" />

    <WebView
        android:id="@+id/webviewRssFull"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


</RelativeLayout>